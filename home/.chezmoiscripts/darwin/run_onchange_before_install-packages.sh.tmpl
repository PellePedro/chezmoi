#!/bin/bash

set -eufo pipefail

{{ $taps := list
  "FelixKratz/formulae"
  "nikitabobko/tap"
-}}


{{ $brews := list
     "bat"
     "cmake"
     "dust"
     "eza"
     "fd"
     "felixkratz/formulae/borders"
     "fzf"
     "gcc"
     "gh"
     "git-delta"
     "git"
     "gnupg"
     "gpgme"
     "jq"
     "just"
     "k9s"
     "kind"
     "lazygit"
     "libtool"
     "luarocks"
     "neovim"
     "ngrep"
     "nnn"
     "pkg-config"
     "pkgconf"
     "protobuf"
     "pspg"
     "ripgrep"
     "shellcheck"
     "shfmt"
     "socat"
     "staticcheck"
     "tree"
     "watch"
     "wget"
     "yq"
     "zellij"
     "zsh"
-}}
{{ $casks := list
     "aerospace"
     "font-hack-nerd-font"
     "ghostty"
     "visual-studio-code"
     "raycast"
-}}


if ((! $+commands[brew] )); then
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    {{ if eq .chezmoi.arch "arm64" -}}
        export HOMEBREW_PREFIX="/opt/homebrew"
    {{ else }}
        export HOMEBREW_PREFIX="/usr/local"
    {{ end -}}
    export PATH="${HOMEBREW_PREFIX}/bin:${PATH}"
fi

# First add the taps
{{ range ($taps | sortAlpha | uniq) -}}
brew tap "{{ . }}"
{{ end }}

# Install brews with fallback to --build-from-source
{{ range ($brews | sortAlpha | uniq) -}}
if ! brew list --formula "{{ . }}" &>/dev/null; then
    echo "Installing {{ . }}..."
    if ! brew install "{{ . }}"; then
        echo "Failed to install {{ . }} from bottle, trying to build from source..."
        brew install --build-from-source "{{ . }}" || echo "Warning: Failed to install {{ . }}"
    fi
fi
{{ end -}}

# Install casks (no build-from-source option for casks)
{{ range ($casks | sortAlpha | uniq) -}}
brew install --cask "{{ . }}" || echo "Warning: Failed to install cask {{ . }}"
{{ end -}}
